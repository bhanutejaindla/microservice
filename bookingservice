package com.hashedin.huspark.service;

import com.hashedin.huspark.dto.BookingRequestDTO;
import com.hashedin.huspark.dto.BookingResponseDTO;
import java.util.List;

public interface BookingService {
    BookingResponseDTO createBooking(String customerEmail, BookingRequestDTO dto);
    List<BookingResponseDTO> getCustomerBookings(String customerEmail);
    List<BookingResponseDTO> getProviderBookings(String providerEmail);
    BookingResponseDTO updateStatus(Long bookingId, String status);
    List<BookingResponseDTO> getAllBookings();
}
