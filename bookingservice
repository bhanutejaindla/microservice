package com.hashedin.huspark.service;

import com.hashedin.huspark.dto.BookingDTO;
import com.hashedin.huspark.model.Booking;
import java.util.List;

public interface BookingService {
    Booking createBooking(String customerEmail, BookingDTO dto);
    List<Booking> getCustomerBookings(String customerEmail);
    List<Booking> getProviderBookings(String providerEmail);
    Booking updateStatus(Long bookingId, String status);
    List<Booking> getAllBookings();
}
